<div id="title">
  <h2><%= banner_title %></h2>
  <h3>Please sign in</h3>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :class => 'hide' %>
  <%= f.email_field :email, :placeholder => 'Email address' %></div>

  <div><%= f.label :password, :class => 'hide' %>
  <%= f.password_field :password, :placeholder => 'Password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class='checkbox'><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Keep me signed in', :class => 'inline' %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'btn btn-info' %></div>
<% end %>

<%= render "devise/shared/links" %>
