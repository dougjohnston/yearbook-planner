<% if content_for?(:templates) -%>
  <%= yield :templates %>
<% end -%>

<% if content_for?(:javascript) -%>
  <script type="text/javascript">
    <%= yield :javascript %>
  </script>
<% end -%>

<% if content_for?(:jquery) -%>
  <script type="text/javascript">
    $(function() {
      <%= yield :jquery %>
    });
  </script>
<% end -%>

