<% title "Assignments" %>

<h1>Assignments for <%= current_user.full_name %></h1>

<% current_yearbook.deadlines.each do |deadline| %>
  <%= debug deadline %>
<% end %>
<ul class="nav nav-tabs" id="">
  <li class="active"><a href="#home">Home</a></li>
  <li><a href="#profile">Profile</a></li>
  <li><a href="#messages">Messages</a></li>
  <li><a href="#settings">Settings</a></li>
</ul>
 
<div class="tab-content">
  <div class="tab-pane active" id="home">...</div>
  <div class="tab-pane" id="profile">...</div>
  <div class="tab-pane" id="messages">...</div>
  <div class="tab-pane" id="settings">...</div>
</div>

<div class="row-fluid">
  <article class="span6">
    <h2>Spreads/Pages</h2>
    <% if current_user.spreads %>
      <% current_user.spreads.each do |a| %>
        <% a.pages.each do |page| %>
          <p><%= page.title %></p>
        <% end %>
      <% end %>
    <% else %>
      <p>You have not been assigned any spreads.</p>
    <% end %>
  </article>
  <article class="span6">
    <h2>Event Coverage</h2>
    <% if current_user.events %>
      <% current_user.events.each do |a| %>
        <%= debug a %>
      <% end %>
    <% else %>
      <p>You have not been assigned any events.</p>
    <% end %>
  </article>
</div>
